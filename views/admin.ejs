<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <title>Ege Kalyon | Terminal V1.9</title>
    <style>
        :root { 
            --accent: #29dec8; --warning: #f59e0b; --danger: #ff4d4d; 
            --primary: #0071e3; --glass: rgba(255, 255, 255, 0.02); --border: rgba(255, 255, 255, 0.08);
        }

        body { background: radial-gradient(circle at top right, #0a1120, #050505); }
        
        /* MODAL & OVERLAY */
        .modal { display: none; position: fixed; z-index: 3000; left: 0; top: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.96); backdrop-filter: blur(20px); }
        .modal-content { background: #0a0a0a; margin: 2% auto; padding: 35px; border: 1px solid var(--border); width: 95%; max-width: 580px; border-radius: 35px; box-shadow: 0 0 100px rgba(0,0,0,0.8); }
        .modal-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 25px; border-bottom: 1px solid #222; padding-bottom: 15px; }

        /* HESAPLAMA GRUPLARI */
        .calc-group { background: var(--glass); padding: 15px; border-radius: 20px; margin-bottom: 15px; border: 1px solid var(--border); }
        .calc-group label { display: block; font-size: 0.6rem; color: #555; margin-bottom: 8px; text-transform: uppercase; font-weight: 800; }
        .input-row { display: flex; gap: 8px; justify-content: center; }
        .input-row input { background: #000 !important; border: 1px solid #222 !important; color: var(--accent) !important; width: 55px; padding: 12px 0; text-align: center; border-radius: 12px !important; font-weight: 900; }
        .year-input { width: 85px !important; }

        /* INFO PANEL (SADECE OKUMA) */
        .info-list { list-style: none; padding: 0; }
        .info-list li { display: flex; justify-content: space-between; padding: 12px 0; border-bottom: 1px solid #111; font-size: 0.85rem; }
        .info-list li span:first-child { color: #555; font-weight: 700; }
        .info-list li span:last-child { color: var(--accent); font-weight: 900; font-family: monospace; }

        /* SAYAÇ */
        .res-timer { display: grid; grid-template-columns: repeat(4, 1fr); gap: 10px; margin-bottom: 15px; }
        .res-timer div { background: #000; padding: 15px 0; border-radius: 15px; border: 1px solid #1a1a1a; text-align: center; }
        #periyot-final { background: var(--warning); color: #000; padding: 12px; border-radius: 50px; font-weight: 900; display: block; text-align: center; }

        /* KARTLAR */
        .status-pulse { position: absolute; top: 15px; right: 15px; width: 8px; height: 8px; border-radius: 50%; background: #22c55e; box-shadow: 0 0 10px #22c55e; }
        #digital-clock { font-size: 2.2rem; font-weight: 950; color: #fff; letter-spacing: -2px; }
        #digital-date { font-size: 0.8rem; color: var(--accent); font-weight: 800; letter-spacing: 3px; }
    </style>
</head>
<body class="admin-body">
    <aside class="sidebar">
        <div class="sidebar-title">EGE KALYON <span>V1.9</span></div>
        <nav class="sidebar-nav">
            <a href="/admin" class="active"><i class="fas fa-microchip"></i> Terminal</a>
            <a href="/cizelge"><i class="fas fa-truck-fast"></i> Operasyon</a>
            <a href="/cikis" style="margin-top: 100px; color: var(--danger);"><i class="fas fa-power-off"></i> Çıkış</a>
        </nav>
    </aside>

    <main class="admin-main">
        <header class="admin-header" style="display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 40px;">
            <div data-aos="fade-right">
                <h1>Sistem <span class="highlight">Otoritesi</span></h1>
                <p style="color: #444; margin-top: 5px;">Güvenli bağlantı katmanı aktif. <%= firma %></p>
            </div>
            <div style="text-align: right;" data-aos="fade-left">
                <div id="digital-clock">00:00:00</div>
                <div id="digital-date">...</div>
            </div>
        </header>

        <section class="grid-cockpit-v2">
            <div class="cyber-card" onclick="location.href='/cizelge'" style="cursor: pointer; border-color: var(--primary);" data-aos="fade-up">
                <i class="fas fa-table-list" style="color: var(--primary) !important;"></i>
                <div class="card-info"><h3>1. Çizelge Paneli</h3><p><%= isler.length %> Aktif Operasyon</p></div>
            </div>

            <div class="cyber-card" onclick="openModal('bekleme-modal')" style="cursor: pointer; border-color: var(--warning);" data-aos="fade-up" data-aos-delay="100">
                <div class="status-pulse"></div>
                <i class="fas fa-stopwatch" style="color: var(--warning) !important;"></i>
                <div class="card-info"><h3>2. Bekleme Takibi</h3><p>Hakediş Analiz Terminali</p></div>
            </div>

            <a href="https://web.arvento.com/" target="_blank" class="cyber-card" style="text-decoration: none; border-color: #ff4d4d;" data-aos="fade-up" data-aos-delay="200">
                <i class="fas fa-satellite-dish" style="color: #ff4d4d !important;"></i>
                <div class="card-info"><h3>3. Arvento Takip</h3><p>Canlı Uydu Konumları</p></div>
            </a>

            <a href="https://www.luca.com.tr/" target="_blank" class="cyber-card" style="text-decoration: none; border-color: var(--accent);" data-aos="fade-up" data-aos-delay="300">
                <i class="fas fa-calculator" style="color: var(--accent) !important;"></i>
                <div class="card-info"><h3>4. Luca Finans</h3><p>Muhasebe Portalı</p></div>
            </a>

            <div class="cyber-card" data-aos="fade-up" data-aos-delay="400">
                <i class="fas fa-file-invoice-dollar" style="color: #fbbf24 !important;"></i>
                <div class="card-info"><h3>5. E-Fatura</h3><p>Entegrasyon Hazır</p></div>
            </div>

            <div class="cyber-card" onclick="openModal('sunucu-modal')" style="cursor: pointer;" data-aos="fade-up" data-aos-delay="500">
                <i class="fas fa-server" style="color: #3b82f6 !important;"></i>
                <div class="card-info"><h3>6. Sunucu Durumu</h3><p>Cluster 01 Detayları</p></div>
            </div>

            <div class="cyber-card" onclick="openModal('db-modal')" style="cursor: pointer;" data-aos="fade-up" data-aos-delay="600">
                <i class="fas fa-database" style="color: #a855f7 !important;"></i>
                <div class="card-info"><h3>7. Veritabanı</h3><p>SQLite/Bulut Veri Yapısı</p></div>
            </div>

            <div class="cyber-card" onclick="openModal('firewall-modal')" style="cursor: pointer;" data-aos="fade-up" data-aos-delay="700">
                <i class="fas fa-shield-halved" style="color: #22c55e !important;"></i>
                <div class="card-info"><h3>8. Güvenlik Duvarı</h3><p>SSL & AES Şifreleme</p></div>
            </div>
        </section>
    </main>

    <div id="bekleme-modal" class="modal">
        <div class="modal-content">
            <div class="modal-header"><h2><i class="fas fa-clock"></i> BEKLEME TERMİNALİ</h2><span onclick="closeModal('bekleme-modal')" style="cursor:pointer">✕</span></div>
            <div class="calc-group"><label>GİRİŞ (GG/AA/YYYY SS:DK)</label>
                <div class="input-row">
                    <input type="number" id="in-d" placeholder="GG" oninput="liveCalc()">
                    <input type="number" id="in-m" placeholder="AA" oninput="liveCalc()">
                    <input type="number" id="in-y" class="year-input" placeholder="YYYY" oninput="liveCalc()">
                    <input type="number" id="in-h" placeholder="SS" oninput="liveCalc()">
                    <input type="number" id="in-min" placeholder="DK" oninput="liveCalc()">
                </div>
            </div>
            <div class="result-screen">
                <div class="res-timer">
                    <div><span id="res-d">00</span><label>GÜN</label></div>
                    <div><span id="res-h">00</span><label>SAAT</label></div>
                    <div><span id="res-m">00</span><label>DAK</label></div>
                    <div><span id="res-s">00</span><label>SN</label></div>
                </div>
                <div id="periyot-final">GİRİŞ BEKLENİYOR</div>
            </div>
        </div>
    </div>

    <div id="sunucu-modal" class="modal">
        <div class="modal-content">
            <div class="modal-header"><h2><i class="fas fa-server"></i> SUNUCU BİLGİLERİ</h2><span onclick="closeModal('sunucu-modal')" style="cursor:pointer">✕</span></div>
            <ul class="info-list">
                <li><span>Sağlayıcı:</span> <span>Render.com Cloud</span></li>
                <li><span>Konum:</span> <span>Frankfurt, DE (Oregon/US)</span></li>
                <li><span>Çalışma Zamanı:</span> <span>%99.9 Uptime</span></li>
                <li><span>Hafıza Kullanımı:</span> <span>24.5 MB / 512 MB</span></li>
                <li><span>Node.js Sürümü:</span> <span>v20.11.0</span></li>
            </ul>
        </div>
    </div>

    <div id="db-modal" class="modal">
        <div class="modal-content">
            <div class="modal-header"><h2><i class="fas fa-database"></i> VERİTABANI DURUMU</h2><span onclick="closeModal('db-modal')" style="cursor:pointer">✕</span></div>
            <ul class="info-list">
                <li><span>Tür:</span> <span>SQLite v3 (Relational)</span></li>
                <li><span>Toplam Kayıt:</span> <span><%= isler.length %> Aktif İş</span></li>
                <li><span>Dosya Boyutu:</span> <span>1.2 MB</span></li>
                <li><span>Yedekleme:</span> <span>Her 24 Saatte (Otomatik)</span></li>
                <li><span>Erişim:</span> <span>Local & Render Persistent</span></li>
            </ul>
        </div>
    </div>

    <div id="firewall-modal" class="modal">
        <div class="modal-content">
            <div class="modal-header"><h2><i class="fas fa-shield-halved"></i> GÜVENLİK TERMİNALİ</h2><span onclick="closeModal('firewall-modal')" style="cursor:pointer">✕</span></div>
            <ul class="info-list">
                <li><span>SSL Sertifikası:</span> <span>Let's Encrypt (Aktif)</span></li>
                <li><span>Şifreleme:</span> <span>AES-256-GCM</span></li>
                <li><span>DDoS Koruması:</span> <span>Cloudflare/Render Shield</span></li>
                <li><span>IP Filtresi:</span> <span>Yalnızca Yetkili Giriş</span></li>
                <li><span>Loglama:</span> <span>Tüm Hareketler Kayıt Altında</span></li>
            </ul>
        </div>
    </div>

    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init();

        // SAAT
        setInterval(() => {
            const now = new Date();
            document.getElementById('digital-clock').innerText = now.toLocaleTimeString('tr-TR');
            document.getElementById('digital-date').innerText = now.toLocaleDateString('tr-TR', { day:'numeric', month:'long', year:'numeric' });
        }, 1000);

        function openModal(id) { document.getElementById(id).style.display = 'block'; }
        function closeModal(id) { document.getElementById(id).style.display = 'none'; }

        // BEKLEME HESABI
        function liveCalc() {
            const inD = document.getElementById('in-d').value;
            const inM = document.getElementById('in-m').value;
            const inY = document.getElementById('in-y').value;
            const inH = document.getElementById('in-h').value;
            const inMin = document.getElementById('in-min').value;

            if(inD && inM && inY && inH && inMin) {
                const start = new Date(inY, inM-1, inD, inH, inMin);
                const diff = new Date() - start;
                if(diff > 0) {
                    document.getElementById('res-d').innerText = Math.floor(diff / 86400000).toString().padStart(2,'0');
                    document.getElementById('res-h').innerText = Math.floor((diff % 86400000) / 3600000).toString().padStart(2,'0');
                    document.getElementById('res-m').innerText = Math.floor((diff % 3600000) / 60000).toString().padStart(2,'0');
                    document.getElementById('res-s').innerText = Math.floor((diff % 60000) / 1000).toString().padStart(2,'0');
                    const wait = Math.floor((diff / 3600000) / 6);
                    document.getElementById('periyot-final').innerText = wait + " BEKLEME TESPİT EDİLDİ";
                }
            }
        }
        setInterval(liveCalc, 1000);
    </script>
</body>
</html>
