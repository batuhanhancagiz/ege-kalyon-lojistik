<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <title>Ege Kalyon | Terminal V3.0</title>
    <style>
        :root { 
            --accent: #29dec8; --warning: #f59e0b; --danger: #ff4d4d; 
            --primary: #0071e3; --glass: rgba(255, 255, 255, 0.02); --border: rgba(255, 255, 255, 0.08);
            --whatsapp: #25D366; --outlook: #0078d4; --petrol: #e21e26;
        }

        body { background: radial-gradient(circle at top right, #0a1120, #050505); overflow-x: hidden; display: flex; flex-direction: column; min-height: 100vh; }
        
        /* MODAL & OVERLAY SİSTEMİ */
        .modal { display: none; position: fixed; z-index: 3000; left: 0; top: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.96); backdrop-filter: blur(20px); overflow-y: auto; }
        .modal-content { background: #0a0a0a; margin: 2% auto; padding: 35px; border: 1px solid var(--border); width: 95%; max-width: 800px; border-radius: 35px; box-shadow: 0 0 100px rgba(0,0,0,0.8); }
        .modal-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 25px; border-bottom: 1px solid #222; padding-bottom: 15px; }

        /* AKILLI NOTLAR YENİ TASARIM */
        .note-input-group { display: flex; gap: 10px; margin-bottom: 20px; }
        .note-input-group input { flex: 1; background: #000; border: 1px solid #333; color: #fff; padding: 12px; border-radius: 10px; outline: none; }
        .note-list { list-style: none; padding: 0; }
        .note-item { background: var(--glass); border: 1px solid var(--border); padding: 12px 20px; border-radius: 15px; margin-bottom: 10px; display: flex; justify-content: space-between; align-items: center; transition: 0.3s; }
        .note-item:hover { border-color: var(--warning); }
        .note-text { flex: 1; color: #ccc; font-size: 0.95rem; }
        .note-actions { display: flex; gap: 10px; }
        .note-actions button { background: none; border: none; cursor: pointer; font-size: 1rem; transition: 0.2s; }
        .btn-note-del { color: var(--danger); }
        .btn-note-check { color: var(--accent); }

        /* FOOTER TASARIMI */
        .admin-footer { margin-top: auto; padding: 40px 20px 20px; background: rgba(0,0,0,0.5); border-top: 1px solid var(--border); text-align: center; }
        .footer-content { max-width: 1200px; margin: 0 auto; }
        .footer-top { display: flex; justify-content: center; gap: 30px; margin-bottom: 20px; color: #555; font-size: 0.8rem; font-weight: 700; text-transform: uppercase; letter-spacing: 1px; }
        .footer-signature { color: #888; font-size: 0.9rem; font-weight: 600; }
        .signature-red { color: var(--danger); font-weight: 800; }

        /* MEVCUT STİLLER KORUNDU */
        .driver-form { display: grid; grid-template-columns: repeat(auto-fit, minmax(180px, 1fr)); gap: 15px; background: var(--glass); padding: 20px; border-radius: 20px; border: 1px solid var(--border); margin-bottom: 25px; }
        .form-group { display: flex; flex-direction: column; gap: 5px; }
        .form-group label { font-size: 0.65rem; color: #555; font-weight: 800; text-transform: uppercase; }
        .form-group input { background: #000 !important; border: 1px solid #222 !important; color: #fff !important; padding: 10px; border-radius: 8px; font-size: 0.85rem; }
        .btn-add-driver { grid-column: 1 / -1; background: var(--accent); color: #000; border: none; padding: 12px; border-radius: 10px; font-weight: 900; cursor: pointer; text-transform: uppercase; transition: 0.3s; }
        .driver-list-table { width: 100%; border-collapse: collapse; margin-top: 20px; font-size: 0.8rem; }
        .driver-list-table td { padding: 12px; border-bottom: 1px solid #111; color: #aaa; }
        .doc-badge { padding: 2px 6px; border-radius: 4px; font-size: 0.65rem; font-weight: bold; }
        .doc-ok { background: rgba(34, 197, 94, 0.1); color: #22c55e; }
        .doc-warn { background: rgba(239, 68, 68, 0.1); color: #ef4444; }
        .status-pulse { position: absolute; top: 15px; right: 15px; width: 8px; height: 8px; border-radius: 50%; background: #22c55e; box-shadow: 0 0 10px #22c55e; }
        #digital-clock { font-size: 2.2rem; font-weight: 950; color: #fff; letter-spacing: -2px; }
        #digital-date { font-size: 0.8rem; color: var(--accent); font-weight: 800; letter-spacing: 3px; }
        .sheets-overlay { position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: #000; z-index: 4000; display: none; flex-direction: column; animation: slideIn 0.5s ease; }
        .sheets-toolbar { background: #111; padding: 15px 30px; display: flex; justify-content: space-between; align-items: center; border-bottom: 1px solid #333; }
        .info-list { list-style: none; padding: 0; }
        .info-list li { display: flex; justify-content: space-between; padding: 12px 0; border-bottom: 1px solid #111; font-size: 0.9rem; }
        @keyframes slideIn { from { transform: translateY(100%); } to { transform: translateY(0); } }
    </style>
</head>
<body class="admin-body">
    <aside class="sidebar">
        <div class="sidebar-title">EGE KALYON <span>PRO</span></div>
        <nav class="sidebar-nav">
            <a href="/admin" class="active"><i class="fas fa-terminal"></i> Dashboard</a>
            <a href="#" onclick="openSheets('cizelge')"><i class="fas fa-table"></i> Çizelge Edit</a>
            <a href="#" onclick="openSheets('bekleme')"><i class="fas fa-clock"></i> Bekleme Edit</a>
            <a href="#" onclick="openModal('driver-modal')"><i class="fas fa-user-group"></i> Şoför Paneli</a>
            <a href="#" onclick="openModal('note-modal')"><i class="fas fa-sticky-note"></i> Akıllı Notlar</a>
            <a href="#" onclick="openModal('log-modal')"><i class="fas fa-box-archive"></i> Sistem Logları</a>
            <a href="/cikis" style="margin-top: 50px; color: var(--danger);"><i class="fas fa-power-off"></i> Çıkış</a>
        </nav>
    </aside>

    <main class="admin-main">
        <header class="admin-header" style="display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 40px;">
            <div data-aos="fade-right">
                <h1>Terminal <span class="highlight">Otoritesi</span></h1>
                <p style="color: #444; margin-top: 5px;">Bağlantı Kanalları Güvenli. <%= firma %></p>
            </div>
            <div style="text-align: right;" data-aos="fade-left">
                <div id="digital-clock">00:00:00</div>
                <div id="digital-date">...</div>
            </div>
        </header>

        <section class="grid-cockpit-v2" style="flex: 1;">
            <div class="cyber-card" onclick="openSheets('cizelge')" style="cursor: pointer; border-color: #4285F4;" data-aos="fade-up">
                <div class="status-pulse"></div>
                <i class="fas fa-file-excel" style="color: #4285F4 !important;"></i>
                <div class="card-info"><h3>Dijital Çizelge</h3><p>Ana Operasyon Tablosu</p></div>
            </div>

            <div class="cyber-card" onclick="openSheets('bekleme')" style="cursor: pointer; border-color: var(--warning);" data-aos="fade-up" data-aos-delay="50">
                <i class="fas fa-stopwatch" style="color: var(--warning) !important;"></i>
                <div class="card-info"><h3>Bekleme Takibi</h3><p>E-Tablo Senkronizasyonu</p></div>
            </div>

            <a href="https://web.arvento.com/" target="_blank" class="cyber-card" style="text-decoration: none; border-color: #ff4d4d;" data-aos="fade-up" data-aos-delay="100">
                <i class="fas fa-satellite-dish" style="color: #ff4d4d !important;"></i>
                <div class="card-info"><h3>Arvento Takip</h3><p>GPS Uydu Bağlantısı</p></div>
            </a>

            <a href="https://www.luca.com.tr/" target="_blank" class="cyber-card" style="text-decoration: none; border-color: var(--accent);" data-aos="fade-up" data-aos-delay="150">
                <i class="fas fa-calculator" style="color: var(--accent) !important;"></i>
                <div class="card-info"><h3>Luca Finans</h3><p>Muhasebe Portalı</p></div>
            </a>

            <a href="https://www.petrolofisi.com.tr/akaryakit-fiyatlari" target="_blank" class="cyber-card" style="text-decoration: none; border-color: var(--petrol);" data-aos="fade-up" data-aos-delay="200">
                <i class="fas fa-gas-pump" style="color: var(--petrol) !important;"></i>
                <div class="card-info"><h3>Akaryakıt Fiyatları</h3><p>Petrol Ofisi Canlı</p></div>
            </a>

            <div class="cyber-card" onclick="openModal('driver-modal')" style="cursor: pointer; border-color: #a855f7;" data-aos="fade-up" data-aos-delay="250">
                <i class="fas fa-user-tie" style="color: #a855f7 !important;"></i>
                <div class="card-info"><h3>Şoför Yönetimi</h3><p>Evrak & Personel Paneli</p></div>
            </div>

            <div class="cyber-card" onclick="openModal('log-modal')" style="cursor: pointer; border-color: #64748b;" data-aos="fade-up" data-aos-delay="300">
                <i class="fas fa-box-archive" style="color: #64748b !important;"></i>
                <div class="card-info"><h3>Sistem Logları</h3><p>Son Hareket Kayıtları</p></div>
            </div>

            <a href="https://web.whatsapp.com/" target="_blank" class="cyber-card" style="text-decoration: none; border-color: var(--whatsapp);" data-aos="fade-up">
                <i class="fab fa-whatsapp" style="color: var(--whatsapp) !important;"></i>
                <div class="card-info"><h3>Kurumsal WhatsApp</h3></div>
            </a>

            <div class="cyber-card" onclick="openModal('sunucu-modal')" style="cursor: pointer;" data-aos="fade-up">
                <i class="fas fa-server" style="color: #3b82f6 !important;"></i>
                <div class="card-info"><h3>Sunucu Yönetimi</h3></div>
            </div>

            <div class="cyber-card" onclick="openModal('firewall-modal')" style="cursor: pointer;" data-aos="fade-up">
                <i class="fas fa-shield-halved" style="color: #22c55e !important;"></i>
                <div class="card-info"><h3>Güvenlik Duvarı</h3></div>
            </div>
        </section>

        <footer class="admin-footer">
            <div class="footer-content">
                <div class="footer-top">
                    <span>Ege Kalyon Lojistik</span>
                    <span>•</span>
                    <span>Terminal V3.0</span>
                    <span>•</span>
                    <span>2026 Tüm Hakları Saklıdır</span>
                </div>
                <div class="footer-signature">
                    Bu Yazılım Batu Yazılım Ve Web Hizmetleri <span class="signature-red">Tarafından Kodlanmıştır</span>
                </div>
            </div>
        </footer>
    </main>

    <div id="note-modal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2><i class="fas fa-sticky-note"></i> OPERASYONEL NOTLAR</h2>
                <span onclick="closeModal('note-modal')" style="cursor:pointer">✕</span>
            </div>
            <div class="note-input-group">
                <input type="text" id="note-input" placeholder="Yeni bir not ekleyin...">
                <button onclick="addNote()" style="background:var(--warning); color:#000; border:none; padding:10px 20px; border-radius:10px; font-weight:900; cursor:pointer;">EKLE</button>
            </div>
            <ul id="note-list" class="note-list">
                </ul>
        </div>
    </div>

    <div id="driver-modal" class="modal">
        <div class="modal-content">
            <div class="modal-header"><h2><i class="fas fa-users-gear"></i> ŞOFÖR YÖNETİMİ</h2><span onclick="closeModal('driver-modal')" style="cursor:pointer">✕</span></div>
            <div class="driver-form">
                <div class="form-group"><label>Şoför Ad Soyad</label><input type="text" id="d-name"></div>
                <div class="form-group"><label>TC Kimlik</label><input type="number" id="d-tc"></div>
                <div class="form-group"><label>Sabit Plaka</label><input type="text" id="d-plate"></div>
                <div class="form-group"><label>SRC (Vade)</label><input type="date" id="d-src"></div>
                <div class="form-group"><label>Psiko (Vade)</label><input type="date" id="d-psiko"></div>
                <button class="btn-add-driver" onclick="addDriver()">KAYDET</button>
            </div>
            <div style="overflow-x: auto;"><table class="driver-list-table"><tbody id="driver-tbody"></tbody></table></div>
        </div>
    </div>

    <div id="sheets-overlay" class="sheets-overlay">
        <div class="sheets-toolbar"><h2 id="sheets-title">TERMİNAL</h2><button class="btn-close-sheets" onclick="closeSheets()">KAPAT ✕</button></div>
        <iframe id="sheets-iframe" src="" style="width: 100%; height: 100%; border: none;"></iframe>
    </div>
    <div id="log-modal" class="modal"><div class="modal-content"><div class="modal-header"><h2>LOG KAYITLARI</h2><span onclick="closeModal('log-modal')" style="cursor:pointer">✕</span></div><ul class="info-list"><li><span>Sistem Durumu:</span><span style="color:var(--accent)">AKTİF</span></li><li><span>Güvenlik:</span><span>AES-256</span></li><li><span>Veritabanı:</span><span>SQLite v3</span></li></ul></div></div>
    <div id="sunucu-modal" class="modal"><div class="modal-content"><div class="modal-header"><h2>SUNUCU</h2><span onclick="closeModal('sunucu-modal')" style="cursor:pointer">✕</span></div><ul class="info-list"><li><span>Lokasyon:</span><span>Frankfurt</span></li><li><span>Uptime:</span><span>%99.9</span></li></ul></div></div>
    <div id="firewall-modal" class="modal"><div class="modal-content"><div class="modal-header"><h2>GÜVENLİK</h2><span onclick="closeModal('firewall-modal')" style="cursor:pointer">✕</span></div><ul class="info-list"><li><span>SSL:</span><span>Aktif</span></li></ul></div></div>

    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init();
        setInterval(() => {
            const now = new Date();
            document.getElementById('digital-clock').innerText = now.toLocaleTimeString('tr-TR');
            document.getElementById('digital-date').innerText = now.toLocaleDateString('tr-TR', { day:'numeric', month:'long', year:'numeric' });
        }, 1000);

        function openModal(id) { document.getElementById(id).style.display = 'block'; if(id==='driver-modal') renderDrivers(); if(id==='note-modal') renderNotes(); }
        function closeModal(id) { document.getElementById(id).style.display = 'none'; }

        function openSheets(type) {
            const overlay = document.getElementById('sheets-overlay');
            const iframe = document.getElementById('sheets-iframe');
            if(type==='cizelge') iframe.src = "https://docs.google.com/spreadsheets/d/1WaSNv0a2Nn-xDiHMX3VsLwYaOwTS5maCtrzRS9zUdlc/edit?rm=minimal";
            else iframe.src = "https://docs.google.com/spreadsheets/d/1sCy68YJYkvFIpQumgP6_tt5mcBFgDm2WLIbvuVHCgIM/edit?rm=minimal";
            overlay.style.display = 'flex';
        }
        function closeSheets() { document.getElementById('sheets-overlay').style.display = 'none'; document.getElementById('sheets-iframe').src = ""; }

        // --- AKILLI NOT SİSTEMİ ---
        function getNotes() { return JSON.parse(localStorage.getItem('terminal_notes_list') || '[]'); }
        function saveNotes(notes) { localStorage.setItem('terminal_notes_list', JSON.stringify(notes)); }

        function addNote() {
            const input = document.getElementById('note-input');
            if(!input.value) return;
            const notes = getNotes();
            notes.push({ id: Date.now(), text: input.value, done: false });
            saveNotes(notes);
            input.value = "";
            renderNotes();
        }

        function deleteNote(id) {
            const notes = getNotes().filter(n => n.id !== id);
            saveNotes(notes);
            renderNotes();
        }

        function toggleNote(id) {
            const notes = getNotes().map(n => n.id === id ? {...n, done: !n.done} : n);
            saveNotes(notes);
            renderNotes();
        }

        function renderNotes() {
            const list = document.getElementById('note-list');
            list.innerHTML = getNotes().map(n => `
                <li class="note-item">
                    <span class="note-text" style="${n.done ? 'text-decoration:line-through; opacity:0.5' : ''}">${n.text}</span>
                    <div class="note-actions">
                        <button class="btn-note-check" onclick="toggleNote(${n.id})"><i class="fas fa-check-circle"></i></button>
                        <button class="btn-note-del" onclick="deleteNote(${n.id})"><i class="fas fa-trash"></i></button>
                    </div>
                </li>
            `).join('');
        }

        // --- ŞOFÖR SİSTEMİ (Mevcut mantık korundu) ---
        function getDrivers() { return JSON.parse(localStorage.getItem('drivers') || '[]'); }
        function addDriver() {
            const name = document.getElementById('d-name').value;
            const plate = document.getElementById('d-plate').value;
            if(!name || !plate) return;
            const drivers = getDrivers();
            drivers.push({ id: Date.now(), name, plate, src: document.getElementById('d-src').value, psiko: document.getElementById('d-psiko').value });
            localStorage.setItem('drivers', JSON.stringify(drivers));
            renderDrivers();
        }
        function deleteDriver(id) {
            const drivers = getDrivers().filter(d => d.id !== id);
            localStorage.setItem('drivers', JSON.stringify(drivers));
            renderDrivers();
        }
        function renderDrivers() {
            const tbody = document.getElementById('driver-tbody');
            const today = new Date();
            tbody.innerHTML = getDrivers().map(d => `
                <tr>
                    <td><b>${d.name}</b><br><small>${d.plate}</small></td>
                    <td><span class="doc-badge ${d.src && new Date(d.src) < today ? 'doc-warn' : 'doc-ok'}">SRC: ${d.src || 'Yok'}</span></td>
                    <td><button class="btn-del" onclick="deleteDriver(${d.id})" style="color:var(--danger); border:none; background:none; cursor:pointer;"><i class="fas fa-trash"></i></button></td>
                </tr>
            `).join('');
        }
    </script>
</body>
</html>
