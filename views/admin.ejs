<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <title>Ege Kalyon | Terminal V1.8</title>
    <style>
        :root { 
            --accent: #29dec8; 
            --warning: #f59e0b; 
            --danger: #ff4d4d; 
            --primary: #0071e3;
            --glass: rgba(255, 255, 255, 0.02); 
            --border: rgba(255, 255, 255, 0.08);
        }

        /* --- MODERN NEON THEME --- */
        body { background: radial-gradient(circle at top right, #0a1120, #050505); }
        
        .modal { display: none; position: fixed; z-index: 3000; left: 0; top: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.96); backdrop-filter: blur(20px); }
        .modal-content { background: #0a0a0a; margin: 2% auto; padding: 35px; border: 1px solid var(--border); width: 95%; max-width: 580px; border-radius: 35px; box-shadow: 0 0 100px rgba(0,0,0,0.8); }

        /* HESAPLAMA GRUPLARI */
        .calc-group { background: var(--glass); padding: 20px; border-radius: 25px; margin-bottom: 20px; border: 1px solid var(--border); }
        .calc-group label { display: block; font-size: 0.65rem; font-weight: 800; color: #555; margin-bottom: 12px; text-transform: uppercase; letter-spacing: 2px; }
        .input-row { display: flex; gap: 8px; justify-content: center; }
        .input-row input { 
            background: #000 !important; border: 1px solid #222 !important; color: var(--accent) !important; 
            width: 60px; padding: 15px 0; text-align: center; border-radius: 15px !important; font-weight: 900; font-size: 1.1rem; transition: 0.3s;
        }
        .input-row input:focus { border-color: var(--accent) !important; box-shadow: 0 0 20px rgba(41, 222, 200, 0.15); }
        .input-row .year-input { width: 90px; }

        /* SAYAÇ EKRANI */
        .result-screen { background: #000; padding: 30px; border-radius: 25px; border: 1px solid #111; text-align: center; }
        .res-timer { display: grid; grid-template-columns: repeat(4, 1fr); gap: 12px; margin-bottom: 20px; }
        .res-timer div { background: linear-gradient(180deg, #0a0a0a, #000); padding: 18px 0; border-radius: 20px; border: 1px solid #1a1a1a; }
        .res-timer span { display: block; font-size: 1.6rem; font-weight: 900; color: #fff; text-shadow: 0 0 10px rgba(255,255,255,0.2); }
        .res-timer label { font-size: 0.55rem; color: #444; font-weight: 800; }
        
        #periyot-final { background: var(--warning); color: #000; padding: 12px 30px; border-radius: 100px; font-weight: 900; font-size: 0.95rem; box-shadow: 0 10px 30px rgba(245, 158, 11, 0.2); }

        /* KART TASARIMLARI */
        .cyber-card { position: relative; overflow: hidden; }
        .status-pulse { position: absolute; top: 15px; right: 15px; width: 8px; height: 8px; border-radius: 50%; background: #22c55e; box-shadow: 0 0 10px #22c55e; }
        .card-tag { font-size: 0.6rem; background: var(--glass); padding: 4px 10px; border-radius: 8px; color: #555; font-weight: 800; }

        /* SAAT */
        #digital-clock { font-size: 2.2rem; font-weight: 950; letter-spacing: -2px; color: #fff; line-height: 1; }
        #digital-date { font-size: 0.8rem; color: var(--accent); font-weight: 800; letter-spacing: 3px; }
    </style>
</head>
<body class="admin-body">
    <aside class="sidebar">
        <div class="sidebar-title">EGE KALYON <span>PRO</span></div>
        <nav class="sidebar-nav">
            <a href="/admin" class="active"><i class="fas fa-terminal"></i> Dashboard</a>
            <a href="/cizelge"><i class="fas fa-truck-fast"></i> Operasyon</a>
            <a href="#"><i class="fas fa-file-contract"></i> Sözleşmeler</a>
            <a href="#"><i class="fas fa-microchip"></i> Sistem Ayarları</a>
            <a href="/cikis" style="margin-top: 50px; color: var(--danger);"><i class="fas fa-power-off"></i> Çıkış</a>
        </nav>
    </aside>

    <main class="admin-main">
        <header class="admin-header" style="display: flex; justify-content: space-between; align-items: flex-start;">
            <div data-aos="fade-right">
                <h1 style="font-size: 1.8rem;">Terminal <span class="highlight">Cockpit</span></h1>
                <p style="color: #555; margin-top: 8px;">Hoş geldin <%= firma %>, tüm sistemler stabil.</p>
            </div>
            <div style="text-align: right;" data-aos="fade-left">
                <div id="digital-clock">00:00:00</div>
                <div id="digital-date">...</div>
            </div>
        </header>

        <section class="grid-cockpit-v2">
            <div class="cyber-card" onclick="openModal('bekleme-modal')" style="cursor: pointer; border-color: var(--warning);" data-aos="zoom-in">
                <div class="status-pulse"></div>
                <i class="fas fa-stopwatch" style="color: var(--warning) !important;"></i>
                <div class="card-info"><h3>Bekleme Terminali</h3><p>6 Saatte 1 Hakediş Analizi</p></div>
            </div>

            <a href="https://web.arvento.com/" target="_blank" class="cyber-card" style="text-decoration: none; border-color: #ff4d4d;" data-aos="zoom-in" data-aos-delay="100">
                <i class="fas fa-satellite-dish" style="color: #ff4d4d !important;"></i>
                <div class="card-info"><h3>Arvento Takip</h3><p>Canlı Uydu Bağlantısı</p></div>
            </a>

            <a href="https://www.luca.com.tr/" target="_blank" class="cyber-card" style="text-decoration: none; border-color: var(--accent);" data-aos="zoom-in" data-aos-delay="200">
                <i class="fas fa-calculator" style="color: var(--accent) !important;"></i>
                <div class="card-info"><h3>Luca Finans</h3><p>Bulut Muhasebe Terminali</p></div>
            </a>

            <div class="cyber-card" data-aos="fade-up">
                <div class="card-tag">SQLITE V3</div>
                <i class="fas fa-database" style="color: #a855f7 !important;"></i>
                <div class="card-info"><h3>Veritabanı</h3><p>Lokal Veri Kaydı Aktif</p></div>
            </div>

            <div class="cyber-card" data-aos="fade-up" data-aos-delay="100">
                <div class="card-tag">DEPLOYED</div>
                <i class="fas fa-server" style="color: #3b82f6 !important;"></i>
                <div class="card-info"><h3>Sunucu Durumu</h3><p>Render.com Cluster 01</p></div>
            </div>

            <div class="cyber-card" onclick="location.href='/cizelge'" data-aos="fade-up" data-aos-delay="200">
                <i class="fas fa-table-list"></i>
                <div class="card-info"><h3>Çizelge Paneli</h3><p><%= isler.length %> Aktif Operasyon</p></div>
            </div>

            <div class="cyber-card" data-aos="fade-up" data-aos-delay="300">
                <div class="card-tag">NEW</div>
                <i class="fas fa-shield-halved" style="color: #22c55e !important;"></i>
                <div class="card-info"><h3>Güvenlik Duvarı</h3><p>AES-256 Şifreleme Aktif</p></div>
            </div>

            <div class="cyber-card" data-aos="fade-up" data-aos-delay="400" style="opacity: 0.4;">
                <div class="card-tag">COMING SOON</div>
                <i class="fas fa-robot"></i>
                <div class="card-info"><h3>AI Optimizer</h3><p>Rota Analiz Motoru</p></div>
            </div>

            <div class="cyber-card" data-aos="fade-up" data-aos-delay="500">
                <i class="fas fa-file-invoice-dollar" style="color: #fbbf24 !important;"></i>
                <div class="card-info"><h3>E-Fatura</h3><p>Logo/Luca Entegrasyonu</p></div>
            </div>
        </section>
    </main>

    <div id="bekleme-modal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2><i class="fas fa-stopwatch-20"></i> BEKLEME TERMİNALİ</h2>
                <span class="close-btn" onclick="closeModal('bekleme-modal')" style="cursor: pointer;">✕</span>
            </div>
            
            <div class="calc-group">
                <label>ARAÇ GİRİŞ (GG / AA / YYYY / SS : DK)</label>
                <div class="input-row">
                    <input type="number" id="in-d" placeholder="GG" maxlength="2" oninput="liveCalc()">
                    <input type="number" id="in-m" placeholder="AA" maxlength="2" oninput="liveCalc()">
                    <input type="number" id="in-y" class="year-input" placeholder="YYYY" maxlength="4" oninput="liveCalc()">
                    <input type="number" id="in-h" placeholder="SS" maxlength="2" oninput="liveCalc()">
                    <input type="number" id="in-min" placeholder="DK" maxlength="2" oninput="liveCalc()">
                </div>
            </div>

            <div class="calc-group">
                <label style="color: var(--accent);">ARAÇ ÇIKIŞ (BOŞSA "ŞİMDİ" ALIR)</label>
                <div class="input-row">
                    <input type="number" id="out-d" placeholder="GG" maxlength="2" oninput="liveCalc()">
                    <input type="number" id="out-m" placeholder="AA" maxlength="2" oninput="liveCalc()">
                    <input type="number" id="out-y" class="year-input" placeholder="YYYY" maxlength="4" oninput="liveCalc()">
                    <input type="number" id="out-h" placeholder="SS" maxlength="2" oninput="liveCalc()">
                    <input type="number" id="out-min" placeholder="DK" maxlength="2" oninput="liveCalc()">
                </div>
            </div>

            <div class="result-screen">
                <div class="res-timer">
                    <div><span id="res-d">00</span><label>GÜN</label></div>
                    <div><span id="res-h">00</span><label>SAAT</label></div>
                    <div><span id="res-m">00</span><label>DAK</label></div>
                    <div><span id="res-s">00</span><label>SN</label></div>
                </div>
                <div id="periyot-final">VERİ GİRİŞİ BEKLENİYOR...</div>
            </div>
        </div>
    </div>

    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init();

        // SAAT
        setInterval(() => {
            const now = new Date();
            document.getElementById('digital-clock').innerText = now.toLocaleTimeString('tr-TR');
            document.getElementById('digital-date').innerText = now.toLocaleDateString('tr-TR', { day:'numeric', month:'long', year:'numeric' });
        }, 1000);

        function openModal(id) { document.getElementById(id).style.display = 'block'; }
        function closeModal(id) { document.getElementById(id).style.display = 'none'; }

        // BEKLEME HESABI
        function liveCalc() {
            const inD = document.getElementById('in-d').value;
            const inM = document.getElementById('in-m').value;
            const inY = document.getElementById('in-y').value;
            const inH = document.getElementById('in-h').value;
            const inMin = document.getElementById('in-min').value;

            const outD = document.getElementById('out-d').value;
            const outM = document.getElementById('out-m').value;
            const outY = document.getElementById('out-y').value;
            const outH = document.getElementById('out-h').value;
            const outMin = document.getElementById('out-min').value;

            if(inD && inM && inY && inH && inMin) {
                const start = new Date(inY, inM-1, inD, inH, inMin);
                let end = new Date();
                if(outD && outM && outY && outH && outMin) end = new Date(outY, outM-1, outD, outH, outMin);
                
                const diff = end - start;
                if(diff > 0) {
                    const d = Math.floor(diff / 86400000);
                    const h = Math.floor((diff % 86400000) / 3600000);
                    const m = Math.floor((diff % 3600000) / 60000);
                    const s = Math.floor((diff % 60000) / 1000);

                    document.getElementById('res-d').innerText = d.toString().padStart(2,'0');
                    document.getElementById('res-h').innerText = h.toString().padStart(2,'0');
                    document.getElementById('res-m').innerText = m.toString().padStart(2,'0');
                    document.getElementById('res-s').innerText = s.toString().padStart(2,'0');

                    const wait = Math.floor((diff / 3600000) / 6);
                    const status = document.getElementById('periyot-final');
                    status.innerText = wait + " BEKLEME PERİYODU TESPİT EDİLDİ";
                    status.style.background = wait > 0 ? "var(--danger)" : "var(--warning)";
                    status.style.color = wait > 0 ? "#fff" : "#000";
                }
            }
        }
        setInterval(liveCalc, 1000);
    </script>
</body>
</html>
