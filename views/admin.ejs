<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <title>Ege Kalyon | Pro Terminal V1.7</title>
    <style>
        :root { --accent: #29dec8; --warning: #f59e0b; --danger: #ff4d4d; --glass: rgba(255, 255, 255, 0.03); }
        
        /* --- MODAL TASARIM --- */
        .modal { display: none; position: fixed; z-index: 2000; left: 0; top: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.95); backdrop-filter: blur(15px); }
        .modal-content { background: #0a0a0a; margin: 2% auto; padding: 30px; border: 1px solid #222; width: 95%; max-width: 550px; border-radius: 30px; }
        
        /* HESAPLAMA GRUPLARI */
        .calc-group { background: var(--glass); padding: 15px; border-radius: 20px; margin-bottom: 15px; border: 1px solid rgba(255,255,255,0.05); }
        .calc-group label { display: block; font-size: 0.6rem; font-weight: 800; color: #555; margin-bottom: 8px; text-transform: uppercase; letter-spacing: 1px; }
        .input-row { display: flex; gap: 5px; justify-content: center; flex-wrap: wrap; }
        .input-row input { 
            background: #000 !important; border: 1px solid #333 !important; color: var(--accent) !important; 
            width: 55px; padding: 12px 0; text-align: center; border-radius: 12px !important; font-weight: 900; font-size: 1rem;
        }
        .input-row input.year-input { width: 80px; }

        /* SONUÇ EKRANI */
        .result-screen { background: #000; padding: 25px; border-radius: 20px; border: 1px solid #222; text-align: center; }
        .res-timer { display: grid; grid-template-columns: repeat(4, 1fr); gap: 10px; margin-bottom: 15px; }
        .res-timer div { background: #111; padding: 15px 0; border-radius: 15px; border: 1px solid #222; }
        .res-timer span { display: block; font-size: 1.4rem; font-weight: 900; color: #fff; }
        .res-timer label { font-size: 0.5rem; color: #444; font-weight: 800; }
        
        #periyot-final { background: var(--warning); color: #000; padding: 10px 25px; border-radius: 50px; font-weight: 900; font-size: 0.9rem; display: inline-block; }

        /* HEADER SAAT */
        #digital-clock { font-size: 2rem; font-weight: 900; color: #fff; letter-spacing: -1px; }
        #digital-date { font-size: 0.85rem; color: var(--accent); font-weight: 800; text-transform: uppercase; letter-spacing: 2px; }

        /* YENİ KUTU ÖZELLİĞİ */
        .status-badge { font-size: 0.6rem; padding: 3px 8px; border-radius: 5px; background: rgba(41, 222, 200, 0.1); color: var(--accent); float: right; }
    </style>
</head>
<body class="admin-body">
    <aside class="sidebar">
        <div class="sidebar-title">EGE KALYON <span style="color: #fff;">V1.7</span></div>
        <nav class="sidebar-nav">
            <a href="/admin" class="active"><i class="fas fa-microchip"></i> Sistem Paneli</a>
            <a href="/cizelge"><i class="fas fa-truck-container"></i> Operasyon</a>
            <a href="#"><i class="fas fa-file-invoice-dollar"></i> Finans</a>
            <a href="#"><i class="fas fa-shield-alt"></i> Güvenlik</a>
            <a href="/cikis" style="margin-top: 40px; color: var(--danger);"><i class="fas fa-power-off"></i> Çıkış</a>
        </nav>
    </aside>

    <main class="admin-main">
        <header class="admin-header" style="display: flex; justify-content: space-between; align-items: center;">
            <div data-aos="fade-right">
                <h1>Terminal Dashboard, <span class="highlight"><%= firma %></span></h1>
                <p style="color: #666; margin-top: 5px;"><i class="fas fa-check-circle" style="color: #22c55e;"></i> Tüm API servisleri stabil çalışıyor.</p>
            </div>
            <div style="text-align: right;" data-aos="fade-left">
                <div id="digital-clock">00:00:00</div>
                <div id="digital-date">YÜKLENİYOR...</div>
            </div>
        </header>

        <section class="grid-cockpit-v2">
            <div class="cyber-card" onclick="openModal('bekleme-modal')" style="cursor: pointer; border-color: var(--warning);" data-aos="fade-up">
                <i class="fas fa-history" style="color: var(--warning) !important;"></i>
                <div class="card-info"><h3>Bekleme Analizörü</h3><p>GG/AA/YYYY Detaylı Hesaplama</p></div>
            </div>

            <div class="cyber-card luca-box" onclick="openLucaEmbedded()" style="cursor: pointer;" data-aos="fade-up" data-aos-delay="100">
                <i class="fas fa-calculator"></i>
                <div class="card-info"><h3>Luca Terminal</h3><p>Muhasebe Veri Akışı</p></div>
            </div>

            <a href="https://web.arvento.com/" target="_blank" class="cyber-card" style="text-decoration: none;" data-aos="fade-up" data-aos-delay="200">
                <i class="fas fa-satellite" style="color: #ff4d4d !important;"></i>
                <div class="card-info"><h3>Arvento Live</h3><p>GPS Uydu Bağlantısı</p></div>
            </a>

            <div class="cyber-card" data-aos="fade-up">
                <span class="status-badge">AKTİF</span>
                <i class="fas fa-database" style="color: #a855f7 !important;"></i>
                <div class="card-info"><h3>Bulut Depolama</h3><p>SQLite/MongoDB Yedekleme</p></div>
            </div>

            <div class="cyber-card" data-aos="fade-up">
                <span class="status-badge">V1.0</span>
                <i class="fas fa-code-branch" style="color: #3b82f6 !important;"></i>
                <div class="card-info"><h3>API Entegrasyon</h3><p>RESTful Servis Durumu</p></div>
            </div>

            <div class="cyber-card" data-aos="fade-up" style="opacity: 0.6;">
                <span class="status-badge">YAKINDA</span>
                <i class="fas fa-robot"></i>
                <div class="card-info"><h3>AI Lojistik</h3><p>Rota Optimizasyon Motoru</p></div>
            </div>

            <div class="cyber-card" onclick="location.href='/cizelge'" data-aos="fade-up">
                <i class="fas fa-table"></i>
                <div class="card-info"><h3>Veri Çizelgesi</h3><p><%= isler.length %> Aktif İş Emri</p></div>
            </div>

            <div class="cyber-card" data-aos="fade-up">
                <i class="fas fa-server"></i>
                <div class="card-info"><h3>Sunucu Durumu</h3><p>Render.com Cluster 01</p></div>
            </div>
        </section>
    </main>

    <div id="bekleme-modal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2><i class="fas fa-stopwatch"></i> GELİŞMİŞ BEKLEME TERMİNALİ</h2>
                <span class="close-btn" onclick="closeModal('bekleme-modal')">✕</span>
            </div>
            
            <div class="calc-group">
                <label>Giriş: GÜN / AY / YIL / SAAT : DK</label>
                <div class="input-row">
                    <input type="number" id="in-d" placeholder="GG" maxlength="2" oninput="liveCalc()">
                    <input type="number" id="in-m" placeholder="AA" maxlength="2" oninput="liveCalc()">
                    <input type="number" id="in-y" class="year-input" placeholder="YYYY" maxlength="4" oninput="liveCalc()">
                    <input type="number" id="in-h" placeholder="SS" maxlength="2" oninput="liveCalc()">
                    <input type="number" id="in-min" placeholder="DK" maxlength="2" oninput="liveCalc()">
                </div>
            </div>

            <div class="calc-group">
                <label style="color: var(--accent);">Çıkış: GÜN / AY / YIL / SAAT : DK (Boşsa "ŞİMDİ")</label>
                <div class="input-row">
                    <input type="number" id="out-d" placeholder="GG" maxlength="2" oninput="liveCalc()">
                    <input type="number" id="out-m" placeholder="AA" maxlength="2" oninput="liveCalc()">
                    <input type="number" id="out-y" class="year-input" placeholder="YYYY" maxlength="4" oninput="liveCalc()">
                    <input type="number" id="out-h" placeholder="SS" maxlength="2" oninput="liveCalc()">
                    <input type="number" id="out-min" placeholder="DK" maxlength="2" oninput="liveCalc()">
                </div>
            </div>

            <div class="result-screen">
                <div class="res-timer">
                    <div><span id="res-d">00</span><label>GÜN</label></div>
                    <div><span id="res-h">00</span><label>SAAT</label></div>
                    <div><span id="res-m">00</span><label>DAK</label></div>
                    <div><span id="res-s">00</span><label>SN</label></div>
                </div>
                <div id="periyot-final">VERİ GİRİŞİ BEKLENİYOR...</div>
            </div>
        </div>
    </div>

    <div id="luca-overlay" class="luca-overlay">
        <div class="luca-toolbar">
            <h2><i class="fas fa-calculator"></i> LUCA FINANCIAL INTERFACE</h2>
            <button class="btn-close-luca" onclick="closeLucaEmbedded()">KAPAT ✕</button>
        </div>
        <iframe id="luca-iframe" style="flex: 1; border: none; background: #fff;" src=""></iframe>
    </div>

    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init();

        // SAAT MOTORU
        setInterval(() => {
            const now = new Date();
            document.getElementById('digital-clock').innerText = now.toLocaleTimeString('tr-TR');
            document.getElementById('digital-date').innerText = now.toLocaleDateString('tr-TR', { day:'numeric', month:'long', year:'numeric' });
        }, 1000);

        function openModal(id) { document.getElementById(id).style.display = 'block'; }
        function closeModal(id) { document.getElementById(id).style.display = 'none'; }

        // BEKLEME HESAPLAMA (GÜN-AY-YIL DESTEKLİ)
        function liveCalc() {
            const inD = document.getElementById('in-d').value;
            const inM = document.getElementById('in-m').value;
            const inY = document.getElementById('in-y').value;
            const inH = document.getElementById('in-h').value;
            const inMin = document.getElementById('in-min').value;

            const outD = document.getElementById('out-d').value;
            const outM = document.getElementById('out-m').value;
            const outY = document.getElementById('out-y').value;
            const outH = document.getElementById('out-h').value;
            const outMin = document.getElementById('out-min').value;

            if(inD && inM && inY && inH && inMin) {
                const start = new Date(inY, inM-1, inD, inH, inMin);
                let end = new Date();

                if(outD && outM && outY && outH && outMin) {
                    end = new Date(outY, outM-1, outD, outH, outMin);
                }
                
                const diff = end - start;
                if(diff > 0) {
                    const d = Math.floor(diff / 86400000);
                    const h = Math.floor((diff % 86400000) / 3600000);
                    const m = Math.floor((diff % 3600000) / 60000);
                    const s = Math.floor((diff % 60000) / 1000);

                    document.getElementById('res-d').innerText = d.toString().padStart(2,'0');
                    document.getElementById('res-h').innerText = h.toString().padStart(2,'0');
                    document.getElementById('res-m').innerText = m.toString().padStart(2,'0');
                    document.getElementById('res-s').innerText = s.toString().padStart(2,'0');

                    const periods = Math.floor((diff / 3600000) / 6);
                    const status = document.getElementById('periyot-final');
                    status.innerText = periods + " BEKLEME PERİYODU TESPİT EDİLDİ";
                    status.style.background = periods > 0 ? "var(--danger)" : "var(--warning)";
                    status.style.color = periods > 0 ? "#fff" : "#000";
                }
            }
        }
        setInterval(liveCalc, 1000);

        function openLucaEmbedded() {
            document.getElementById('luca-iframe').src = "https://www.luca.com.tr/";
            document.getElementById('luca-overlay').style.display = 'flex';
        }
        function closeLucaEmbedded() {
            document.getElementById('luca-overlay').style.display = 'none';
            document.getElementById('luca-iframe').src = "";
        }
    </script>
</body>
</html>
