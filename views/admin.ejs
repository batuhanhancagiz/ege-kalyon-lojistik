<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <title>Ege Kalyon | Digital Cockpit V2</title>
    <style>
        :root {
            --primary: #0071e3;
            --accent: #29dec8;
            --warning: #f59e0b;
            --danger: #ff4d4d;
            --bg-dark: #050505;
            --card-bg: rgba(15, 15, 15, 0.9);
            --glass: rgba(255, 255, 255, 0.03);
            --border: rgba(255, 255, 255, 0.08);
        }

        /* Akıllı Inputlar ve Sayaç */
        .smart-date-group { display: flex; gap: 8px; margin-top: 15px; justify-content: center; }
        .smart-date-group div { display: flex; flex-direction: column; align-items: center; }
        .smart-date-group label { font-size: 0.6rem; color: #555; margin-bottom: 5px; font-weight: 800; }
        .smart-date-group input { 
            background: #000 !important; border: 1px solid #333 !important; 
            color: var(--accent) !important; text-align: center; font-weight: bold; 
            border-radius: 10px !important; width: 55px; padding: 10px 0;
            font-size: 1.1rem; transition: 0.3s;
        }
        .smart-date-group input:focus { border-color: var(--accent) !important; box-shadow: 0 0 15px rgba(41, 222, 200, 0.2); }

        .label-mini { color: var(--warning); font-size: 0.75rem; font-weight: 800; text-transform: uppercase; margin-top: 20px; display: block; letter-spacing: 1px; }

        /* CANLI SAYAÇ TASARIMI */
        .bekleme-monitor {
            background: rgba(0,0,0,0.4); border: 1px solid var(--border);
            border-radius: 20px; padding: 20px; margin-top: 20px; width: 100%;
        }
        .timer-display { display: grid; grid-template-columns: repeat(4, 1fr); gap: 10px; }
        .timer-box { background: #000; padding: 12px 5px; border-radius: 12px; border: 1px solid #222; text-align: center; }
        .timer-box span { display: block; font-size: 1.4rem; font-weight: 900; color: #fff; line-height: 1; }
        .timer-box label { font-size: 0.55rem; color: #555; font-weight: 800; text-transform: uppercase; }
        
        #bekleme-status {
            margin-top: 15px; padding: 10px; border-radius: 12px;
            font-weight: 900; font-size: 0.85rem; text-align: center;
            background: var(--glass); border: 1px solid var(--border); color: #fff;
        }

        /* --- LUCA OVERLAY --- */
        .luca-overlay {
            position: fixed; top: 0; left: 0; width: 100%; height: 100%;
            background: rgba(0,0,0,0.95); z-index: 10000;
            display: none; flex-direction: column; backdrop-filter: blur(20px);
            animation: fadeIn 0.5s ease;
        }
        .luca-toolbar {
            background: #111; padding: 20px 40px; display: flex;
            justify-content: space-between; align-items: center; border-bottom: 1px solid #222;
        }
        .luca-toolbar h2 { font-size: 1.1rem; color: var(--accent); font-weight: 900; display: flex; align-items: center; gap: 12px; }
        .btn-close-luca { background: var(--danger); color: white; border: none; padding: 12px 30px; border-radius: 12px; cursor: pointer; font-weight: 900; transition: 0.3s; }
        
        @keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }

        /* HEADER SAAT */
        #digital-clock { font-size: 1.8rem; font-weight: 900; color: #fff; letter-spacing: -1px; }
        #digital-date { font-size: 0.8rem; color: var(--accent); font-weight: 700; text-transform: uppercase; letter-spacing: 2px; }

    </style>
</head>
<body class="admin-body">
    <aside class="sidebar">
        <div class="sidebar-title">EGE KALYON <span>V1.4</span></div>
        <nav class="sidebar-nav">
            <a href="/admin" class="active"><i class="fas fa-th-large"></i> Dashboard</a>
            <a href="/cizelge"><i class="fas fa-exchange-alt"></i> Operasyon</a>
            <a href="#"><i class="fas fa-wallet"></i> Kasa & Finans</a>
            <a href="/cikis"><i class="fas fa-power-off"></i> Güvenli Çıkış</a>
        </nav>
    </aside>

    <main class="admin-main">
        <header class="admin-header" style="display: flex; justify-content: space-between; align-items: center;">
            <div data-aos="fade-right">
                <h1>Merhaba, <span class="highlight"><%= firma %></span></h1>
                <p style="color: #666; margin-top: 5px;">Lojistik terminali tüm sistemlere bağlı.</p>
            </div>
            <div style="text-align: right;" data-aos="fade-left">
                <div id="digital-clock">00:00:00</div>
                <div id="digital-date">31 ARALIK 2025</div>
            </div>
        </header>

        <section class="grid-cockpit-v2">
            
            <div class="cyber-card" style="grid-column: span 2; border-color: var(--warning); flex-direction: column; align-items: flex-start; padding: 35px;" data-aos="zoom-in">
                <div style="display: flex; align-items: center; gap: 20px;">
                    <i class="fas fa-stopwatch" style="color: var(--warning) !important; font-size: 2.5rem;"></i>
                    <div class="card-info">
                        <h3 style="font-size: 1.4rem;">Akıllı Bekleme Terminali</h3>
                        <p>6 Saatlik periyotlarla otomatik hakediş hesaplama.</p>
                    </div>
                </div>
                
                <span class="label-mini"><i class="fas fa-calendar-check"></i> Araç Giriş Bilgileri</span>
                <div class="smart-date-group">
                    <div><label>GÜN</label><input type="number" id="in-day" placeholder="00" maxlength="2"></div>
                    <div><label>AY</label><input type="number" id="in-month" placeholder="00" maxlength="2"></div>
                    <div><label>SAAT</label><input type="number" id="in-hour" placeholder="00" maxlength="2"></div>
                    <div><label>DAKİKA</label><input type="number" id="in-min" placeholder="00" maxlength="2"></div>
                </div>

                <div class="bekleme-monitor">
                    <div class="timer-display">
                        <div class="timer-box"><span id="out-d">00</span><label>GÜN</label></div>
                        <div class="timer-box"><span id="out-h">00</span><label>SAAT</label></div>
                        <div class="timer-box"><span id="out-m">00</span><label>DAK</label></div>
                        <div class="timer-box"><span id="out-s">00</span><label>SN</label></div>
                    </div>
                    <div id="bekleme-status">SİSTEM GİRİŞ BEKLİYOR...</div>
                </div>
            </div>

            <div class="cyber-card" onclick="openLucaEmbedded()" style="cursor: pointer; border-color: var(--accent);" data-aos="fade-up">
                <i class="fas fa-calculator" style="color: var(--accent) !important;"></i>
                <div class="card-info"><h3>Luca Muhasebe</h3><p>Gömülü Entegrasyon</p></div>
            </div>

            <div class="cyber-card" onclick="location.href='/cizelge'" data-aos="fade-up" data-aos-delay="100">
                <i class="fas fa-stream"></i>
                <div class="card-info"><h3>Dijital Çizelge</h3><p><%= isler.length %> Aktif Kayıt</p></div>
            </div>

            <a href="https://web.arvento.com/" target="_blank" class="cyber-card" data-aos="fade-up" data-aos-delay="200">
                <i class="fas fa-map-marked-alt" style="color: var(--danger) !important;"></i>
                <div class="card-info"><h3>Arvento Takip</h3><p>Canlı Araç Konumları</p></div>
            </a>

            <div class="cyber-card" data-aos="fade-up" style="opacity: 0.5;">
                <i class="fas fa-gas-pump"></i>
                <div class="card-info"><h3>Yakıt Analizi</h3><p>Çok Yakında</p></div>
            </div>

            <div class="cyber-card" data-aos="fade-up">
                <i class="fas fa-user-shield"></i>
                <div class="card-info"><h3>Şoför Portföyü</h3><p>Personel Dosyaları</p></div>
            </div>
        </section>
    </main>

    <div id="luca-overlay" class="luca-overlay">
        <div class="luca-toolbar">
            <h2><i class="fas fa-calculator"></i> LUCA FINANCIAL TERMINAL</h2>
            <button class="btn-close-luca" onclick="closeLucaEmbedded()">KAPAT ✕</button>
        </div>
        <iframe id="luca-iframe" style="flex: 1; border: none;" src=""></iframe>
    </div>

    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init({ duration: 800, once: true });

        // --- CANLI SAAT MOTORU ---
        function runClock() {
            const now = new Date();
            const timeStr = now.toLocaleTimeString('tr-TR', { hour12: false });
            const dateStr = now.toLocaleDateString('tr-TR', { day: 'numeric', month: 'long', year: 'numeric' });
            
            document.getElementById('digital-clock').innerText = timeStr;
            document.getElementById('digital-date').innerText = dateStr;
        }
        setInterval(runClock, 1000);
        runClock();

        // --- AKILLI BEKLEME MOTORU (6 SAATTE 1) ---
        function calculateLogisticsWait() {
            const d = document.getElementById('in-day').value;
            const m = document.getElementById('in-month').value;
            const h = document.getElementById('in-hour').value;
            const min = document.getElementById('in-min').value;
            const year = new Date().getFullYear();

            if(d && m && h && min) {
                const entry = new Date(year, m - 1, d, h, min);
                const now = new Date();
                const diff = now - entry;

                if(diff > 0) {
                    const days = Math.floor(diff / (1000 * 60 * 60 * 24));
                    const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                    const mins = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
                    const secs = Math.floor((diff % (1000 * 60)) / 1000);

                    // 6 SAAT KURALI
                    const totalHours = diff / (1000 * 60 * 60);
                    const waitCount = Math.floor(totalHours / 6);

                    document.getElementById('out-d').innerText = days.toString().padStart(2, '0');
                    document.getElementById('out-h').innerText = hours.toString().padStart(2, '0');
                    document.getElementById('out-m').innerText = mins.toString().padStart(2, '0');
                    document.getElementById('out-s').innerText = secs.toString().padStart(2, '0');
                    
                    const status = document.getElementById('bekleme-status');
                    if(waitCount > 0) {
                        status.style.background = "var(--danger)";
                        status.innerHTML = `<i class="fas fa-exclamation-triangle"></i> DİKKAT: ${waitCount} BEKLEME OLUŞTU`;
                    } else {
                        status.style.background = "var(--primary)";
                        status.innerText = "BEKLEME HENÜZ OLUŞMADI";
                    }
                }
            }
        }

        // Input dinleyiciler
        document.querySelectorAll('.smart-date-group input').forEach(input => {
            input.addEventListener('input', function() {
                if (this.value.length >= 2) {
                    const next = this.parentElement.nextElementSibling?.querySelector('input');
                    if(next) next.focus();
                }
                calculateLogisticsWait();
            });
        });
        setInterval(calculateLogisticsWait, 1000);

        // LUCA
        function openLucaEmbedded() {
            document.getElementById('luca-iframe').src = "https://www.luca.com.tr/";
            document.getElementById('luca-overlay').style.display = 'flex';
        }
        function closeLucaEmbedded() {
            document.getElementById('luca-overlay').style.display = 'none';
            document.getElementById('luca-iframe').src = "";
        }
    </script>
</body>
</html>
