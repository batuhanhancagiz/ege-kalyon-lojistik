    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init({ duration: 1200, once: true });

        const techContent = {
            nodejs: { t: 'Elite Performans Çekirdeği', d: 'Sistem motoru olarak kullandığımız Node.js, aynı anda binlerce sevkiyat verisini işlemenizi sağlar. En yoğun operasyonlarda bile Dashboard hızından asla ödün vermez.' },
            saas: { t: 'Multi-Tenant SaaS Altyapısı', d: 'Ege Kalyon Yazılım\'ı kullanan her lojistik firması, kendine özel izole edilmiş bir veritabanı alanına sahip olur. Verileriniz banka standartlarında gizlilikle korunur.' },
            arvento: { t: 'Kesintisiz API Senkronizasyonu', d: 'Arvento ile kurduğumuz akıllı köprü sayesinde, araçlarınızın konumları panel dışına çıkmadan doğrudan yazılım içindeki haritalarda simüle edilir. (RESMİ ARVENTO SATICISINDAN HİZMET ALMALISINIZ)' },
            security: { t: 'AES-256 Veri Şifreleme', d: 'Müşteri bilgileriniz, firma finansallarınız ve personel verileriniz en üst düzey askeri şifreleme protokolleri ile AWS bulut sunucularında saklanır.' }
        };

        function toggleTech(key, element) {
            const panel = document.getElementById('techPanel');
            const title = document.getElementById('techTitle');
            const desc = document.getElementById('techDesc');
            const cards = document.querySelectorAll('.idx-tech-card');

            if (element.classList.contains('active')) {
                panel.style.display = 'none';
                element.classList.remove('active');
            } else {
                cards.forEach(c => c.classList.remove('active'));
                title.innerText = techContent[key].t;
                desc.innerText = techContent[key].d;
                panel.style.display = 'block';
                element.classList.add('active');
            }
        }

        window.onscroll = function() {
            var nav = document.getElementById('idx-navbar');
            if (window.pageYOffset > 50) nav.classList.add("scrolled");
            else nav.classList.remove("scrolled");
        };
    </script>
